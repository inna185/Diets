<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:src="@drawable/apple"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="384dp"
        android:layout_height="307dp"
        android:weightSum="1"
        android:layout_weight="0.87">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="114dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Логин:"
                android:id="@+id/tvloginn"
                android:textSize="22dp"
                android:layout_alignBottom="@+id/etLogin"
                android:layout_alignEnd="@+id/textView3"
                android:layout_marginTop="37dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пароль:"
                android:id="@+id/textView3"
                android:textSize="22dp"
                android:layout_below="@+id/tvloginn"
                android:layout_alignEnd="@+id/textView2"
                android:layout_marginTop="37dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя:"
                android:id="@+id/textView4"
                android:textSize="22dp"
                android:layout_below="@+id/etLogin"
                android:layout_alignEnd="@+id/textView3"
                android:layout_marginTop="37dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Возраст:"
                android:id="@+id/textView2"
                android:textSize="22dp"
                android:layout_marginTop="37dp"
                android:layout_below="@+id/textView4"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Отмена"
                android:id="@+id/cancelReg"
                android:width="450px"
                android:textSize="18dp"
                android:background="#b9d5ba"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="80dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etLogin"
                android:textSize="22dp"
                android:password="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/tvloginn"
                android:layout_centerVertical="true"
                android:layout_marginTop="18dp"
                android:allowUndo="true"
                android:autoText="false" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etPassword"
                android:textSize="22dp"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/textView3"
                android:layout_marginTop="18dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etName"
                android:textSize="22dp"
                android:password="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/tvloginn"
                android:layout_centerVertical="true"
                android:layout_marginTop="18dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etAge"
                android:textSize="22dp"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/textView3"
                android:layout_marginTop="18dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Зарегистрироваться"
                android:id="@+id/reg"
                android:width="450px"
                android:textSize="18dp"
                android:background="#b9d5ba"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="30dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>